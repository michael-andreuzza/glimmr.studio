        const targetTab = btn.getAttribute("data-tab");

        tabButtons.forEach((b) => {
          b.classList.remove("text-white", "border-b-white");
          b.classList.add("text-base-500", "border-transparent");
        });

        btn.classList.remove("text-base-500", "border-transparent");
        btn.classList.add("text-white", "border-b-white");

        tabPanels.forEach((panel) => {
          panel.classList.toggle("hidden", panel.id !== targetTab);
        });
      });
    });
