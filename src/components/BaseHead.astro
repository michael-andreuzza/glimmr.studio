---
import "@/styles/global.css";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Michael's — Landing page design that shines"
  description="Landing page design that’s clear, beautiful, and built to convert."
  canonical="https://michaels.agency/"
  openGraph={{
    url: "https://michaels.agency/",
    title: "Michael's — Landing page design that shines",
    description:
      "Landing page design that converts. Clean, visually striking, and created with purpose.",
    images: [
      {
        url: "https://michaels.agency/og.jpg",
        width: 1200,
        height: 630,
        alt: "Michael's",
        type: "image/jpg",
      },
    ],
    site_name: "Michael's",
    type: "website",
    locale: "en_US", 
  }}
  twitter={{
    handle: "@Mike_Andreuzza",
    site: "https://michaels.agency/",
    cardType: "summary_large_image",
  }}
/>

<!-- Additional meta tags -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="author" content="Michael's" />
<meta
  name="keywords"
  content="web design, landing page design, creative studio, Tailwind CSS design, Framer design, UI design, UX design"
/>
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<meta name="theme-color" content="#000000" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />

<!-- Favicons -->
<link rel="icon" href="/favicon.ico" sizes="any" />
<link rel="icon" href="/icon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.webmanifest" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />

<!-- Typography & styles -->
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

<!-- Keen Slider (if using) -->
<link
  href="https://cdn.jsdelivr.net/npm/keen-slider@6.8.6/keen-slider.min.css"
  rel="stylesheet"
/>
